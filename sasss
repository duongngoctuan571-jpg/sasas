-- Tạo Sound (nhạc mới)
local sound = Instance.new("Sound")
sound.SoundId = "rbxassetid://128390756441021" -- Nhạc mới
sound.Volume = 1
sound.Looped = false
sound.Parent = workspace

-- Chờ nhạc load xong
sound.Loaded:Wait()
sound:Play()

-- Đồng bộ lời với nhạc
RunService.RenderStepped:Connect(function()
    local t = sound.TimePosition
    for i = #LYRICS,1,-1 do
        if t >= LYRICS[i].Time then
            textLabel.Text = LYRICS[i].Text
            break
        end
    end
end)


